// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserRoles {
  userRoleId Int      @id @default(autoincrement())
  name       String   @unique
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Users      Users[]
}

model Users {
  userId          Int               @id @default(autoincrement())
  username        String            @unique
  lastname        String            @unique
  userRole        UserRoles         @relation(fields: [userRoleId], references: [userRoleId])
  userRoleId      Int
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  Employees       Employees?
  LeadToEmployees LeadToEmployees[]
}

model Employees {
  employeeId      Int               @id @default(autoincrement())
  user            Users             @relation(fields: [userId], references: [userId])
  userId          Int               @unique
  version         Int               @default(1)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  LeadToEmployees LeadToEmployees[]
}

model LeadToEmployees {
  lead       Users     @relation(fields: [leadId], references: [userId])
  leadId     Int
  employee   Employees @relation(fields: [employeeId], references: [employeeId])
  employeeId Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@id([leadId, employeeId])
}
